<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0/EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thc.sprbasic2025fall.mapper.PostingMapper">

	<!---->


	<select id="detail" parameterType="hashMap" resultType="com.thc.sprbasic2025fall.dto.PostingDto$DetailResDto">
        SELECT posting.id
             , posting.deleted
             , posting.created_at as createdAt
             , posting.modified_at as modifiedAt
             , posting.user_id as userId
             , posting.title
             , posting.content
             , posting.img
             , posting.countlike

             , user.username as userUsername
             , user.name as userName
             , user.nick as userNick
        FROM posting LEFT JOIN user
          ON posting.user_id = user.id
        WHERE posting.id = ${id}
	</select>

    <!-- 공통 WHERE 절 -->
    <sql id="commonWhere">
        WHERE posting.id is not null
        <if test = "deleted != null">AND posting.deleted = #{deleted}</if>
        <if test = "userId != null">AND posting.user_id = #{userId}</if>
        <if test = "title != null and title !=''">AND posting.title LIKE CONCAT('%', #{title}, '%')</if>
    </sql>

    <select id="list" parameterType="hashMap" resultType="com.thc.sprbasic2025fall.dto.PostingDto$DetailResDto">
        SELECT posting.id
        FROM posting
        <include refid="commonWhere"/>
    </select>
    <select id="pagedList" parameterType="hashMap" resultType="com.thc.sprbasic2025fall.dto.PostingDto$DetailResDto">
        SELECT posting.id
        FROM posting
        <include refid="commonWhere"/>
        ORDER BY
            <if test = "orderby =='id'">posting.id </if>
            <if test = "orderby =='title'">posting.title </if>
            <if test = "orderway =='asc'">ASC </if>
            <if test = "orderway =='desc'">DESC </if>
        Limit #{offset}, #{perpage}
    </select>
    <select id="listCount" parameterType="hashMap" resultType="Integer">
        SELECT count(posting.id)
        FROM posting
        <include refid="commonWhere"/>
    </select>

    <select id="scrollList" parameterType="hashMap" resultType="com.thc.sprbasic2025fall.dto.PostingDto$DetailResDto">
        SELECT posting.id
        FROM posting
        <include refid="commonWhere"/>
        <if test = "cursor != null">
            <if test = "orderway != null and orderway =='desc'">AND #{cursor} > posting.id</if>
            <if test = "orderway != null and orderway =='asc'">AND posting.id > #{cursor}</if>
        </if>
        ORDER BY posting.id
        <if test = "orderway != null and orderway =='desc'"> DESC</if>
        <if test = "orderway != null and orderway =='asc'"> ASC</if>
        Limit 0, #{perpage}
    </select>
</mapper>