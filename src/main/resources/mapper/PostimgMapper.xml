<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0/EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thc.sprbasic2025fall.mapper.PostimgMapper">

	<!---->
	<select id="detail" parameterType="hashMap" resultType="com.thc.sprbasic2025fall.dto.PostimgDto$DetailResDto">
		SELECT postimg.id
			 , postimg.deleted
			 , postimg.created_at as createdAt
			 , postimg.modified_at as modifiedAt
			 , postimg.posting_id as postingId
			 , postimg.img
		FROM postimg
		WHERE postimg.id = #{id}
	</select>

    <!-- 공통 WHERE 절 -->
    <sql id="commonWhere">
        WHERE postimg.id is not null
        <if test = "deleted != null">AND postimg.deleted = #{deleted}</if>
        <if test = "postingId != null">AND postimg.posting_id = #{postingId}</if>
    </sql>

    <select id="list" parameterType="hashMap" resultType="com.thc.sprbasic2025fall.dto.PostimgDto$DetailResDto">
        SELECT postimg.id
        FROM postimg
        <include refid="commonWhere"/>
    </select>
    <select id="pagedList" parameterType="hashMap" resultType="com.thc.sprbasic2025fall.dto.PostimgDto$DetailResDto">
        SELECT postimg.id
        FROM postimg
        <include refid="commonWhere"/>
        ORDER BY
            <if test = "orderby =='id'">postimg.id </if>
            <if test = "orderby =='title'">postimg.title </if>
            <if test = "orderway =='asc'">ASC </if>
            <if test = "orderway =='desc'">DESC </if>
        Limit #{offset}, #{perpage}
    </select>
    <select id="listCount" parameterType="hashMap" resultType="Integer">
        SELECT count(postimg.id)
        FROM postimg
        <include refid="commonWhere"/>
    </select>

    <select id="scrollList" parameterType="hashMap" resultType="com.thc.sprbasic2025fall.dto.PostimgDto$DetailResDto">
        SELECT postimg.id
        FROM postimg
        <include refid="commonWhere"/>
        <if test = "cursor != null">
            <if test = "orderway != null and orderway =='desc'">AND #{cursor} > postimg.id</if>
            <if test = "orderway != null and orderway =='asc'">AND postimg.id > #{cursor}</if>
        </if>
        ORDER BY postimg.id
        <if test = "orderway != null and orderway =='desc'"> DESC</if>
        <if test = "orderway != null and orderway =='asc'"> ASC</if>
        Limit 0, #{perpage}
    </select>
</mapper>